                  %li.py-1.text-primary
                    .row
                      .col-10
                        = link_to truncate(serv.title, :length => 35), report_path(serv), :class => "text-body"
                      .col-2
                        %p.text-muted.font-weight-light.mb-0
                          = serv.created_at.strftime('%Y-%m-%d')
            #nav-contact.tab-pane.fade{"aria-labelledby" => "nav-contact-tab", :role => "tabpanel"}
              %ul.mb-0
