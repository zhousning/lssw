                - @cmpt_cstrs.each do |cstr|
                  %li.py-1.text-primary
                    .row
                      .col-10
                        = link_to truncate(cstr.title, :length => 35), report_path(cstr), :class => "text-body"
                      .col-2
                        %p.text-muted.font-weight-light.mb-0
                          = cstr.created_at.strftime('%Y-%m-%d')
