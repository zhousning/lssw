%section.my-3
  .container
    .row
      .col-3
        .card.rounded-0
          .card-header.rounded-0.p-2.qijianbox-title
            公告信息
          .card-body.px-0.py-1
            %ul.mb-0
              - @notices.each do |notice|
                %li.py-1.text-primary
                  = link_to truncate(notice.title, :length => 14), notice_path(notice), :class => "text-body"
      .col-9
        .card.rounded-0.border.border-white
          .card-header.bg-white.text-primary.p-0.border-0
            %nav
              .index-nav-tab.nav.nav-tabs{:role => "tablist"}
                %a#nav-home-tab.nav-item.nav-link.active{"aria-controls" => "nav-home", "aria-selected" => "true", "data-toggle" => "tab", :href => "#nav-home", :role => "tab"}
